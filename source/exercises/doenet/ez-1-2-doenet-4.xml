<setup>
  <selectFromSequence name="a" from="2" to="5" />
  <selectFromSequence name="b" from="6" to="10" />  

  <number name="bMa">$b - $a</number>
  <number name="ab">$a*$b</number>  
  <number name="result">$a+$b</number>    
  <function name="num">x^2 + $bMa x - $ab</function>
  <function name="denom">x-$a</function>
</setup>
<p> 
  Evaluate the following limit:
  <me>\lim_{x\to $a} \frac{$num}{$denom}</me>
  If the limit does not exist, enter <em>DNE</em>.
</p>
<p>
  Limit = <answer name="ans1">$result</answer>
</p>