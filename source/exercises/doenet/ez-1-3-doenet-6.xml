<setup>

  <selectFromSequence assignNames="k" from="1" to="4" step="1" numToSelect="1"/>
  
  <function name="f" symbolic="false">1.25^x</function>
  <derivative name="fP" symbolic="false">$f</derivative>  

  <function name="g" symbolic="false">10 - 1.25^x</function>
  <derivative name="gP" symbolic="false">$g</derivative>  

  <function name="p" symbolic="false">10 - 9*0.75^x</function>
  <derivative name="pP" symbolic="false">$p</derivative>  

  <function name="q" symbolic="false">1 + 8.5*0.75^x</function>
  <derivative name="qP" symbolic="false">$p</derivative> 

  <label name="gLabel" anchor="(-3,$$g(-3)-0.25)"><m>y = g(x)</m></label>
  <label name="LLabel" anchor="(-3,$$L(-3)+0.25)"><m>y = L(x)</m></label>
  
</setup>

<p>Let <m>y = f(x)</m> be the function whose graph is shown below.</p>

<conditionalContent>
  <case condition="$k = 1">
    <figure>
      <graph xmin="0" xmax="10" ymin="-2" ymax="10" size="medium" grid="false" showNavigation="false" displayXAxis="true" displayYAxis="false"> $f
      </graph>
      <caption>Plot of <m>y = f(x)</m></caption>
    </figure>    
  </case>
  <case condition="$k = 2">
      <figure>
      <graph xmin="0" xmax="10" ymin="-2" ymax="10" size="medium" grid="false" showNavigation="false" displayXAxis="true" displayYAxis="false"> $g
      </graph>
      <caption>Plot of <m>y = f(x)</m></caption>
    </figure>    
  </case>
  <case condition="$k = 3">
       <figure>
      <graph xmin="0" xmax="10" ymin="-2" ymax="10" size="medium" grid="false" showNavigation="false" displayXAxis="true" displayYAxis="false"> $p
      </graph>
      <caption>Plot of <m>y = f(x)</m></caption>
    </figure>   
  </case>  
  <case condition="$k = 4">
      <figure>
      <graph xmin="0" xmax="10" ymin="-2" ymax="10" size="medium" grid="false" showNavigation="false" displayXAxis="true" displayYAxis="false"> $q
      </graph>
      <caption>Plot of <m>y = f(x)</m></caption>
    </figure>    
  </case>    
</conditionalContent> 


